use <function> property         // arguments: name, content
// use <function> margin           // arguments: direction, margin
use <function> style_class      // arguments: name
// use <function> spinner_bounds   // arguments: lower, upper, step

def class_name: "YGONewCollectionWindow"
def parent_class: "AdwPreferencesWindow"

interface { template {
    class: "$(class_name)"
    parent: "$(parent_class)"
    property("title" "New Collection")
    property("modal" "true")
    property("default-width" "460")
    property("default-height" "580")
    property("resizable" "false")
}}

def general_page: child { object {
    class: "AdwPreferencesPage"
    property("title" "General")
    child { object {
        class: "AdwPreferencesGroup"
        child { object {
            class: "AdwEntryRow"
            property("title" "Name")
        }}
        child { object {
            class: "AdwEntryRow"
            property("title" "Description")
        }}
    }}
    child { object {
        class: "AdwPreferencesGroup"
        child { object {
            class: "AdwActionRow"
            property("title" "Starred")
            property("subtitle" "Starred collections are listed above non-starred ones")
            child { object {
                class: "GtkSwitch"
                property("valign" "center")
            }}
        }}
    }}
    child { object {
        class: "AdwPreferencesGroup"
        child { object {
            class: "GtkButton"
            property("label" "Create")
            style {
                style_class("title-4")
                style_class("suggested-action")
            }
            property("height-request" "50")
        }}
    }}
}}
